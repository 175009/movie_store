{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" role="form">
  
    <h2 class="form-signin-heading">Panel logowania</h2>
  
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <input class="form-control" placeholder="Nazwa użytkownika" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    <input class="form-control" placeholder="Hasło" type="password" id="password" name="_password" required="required"  />

    <label class="checkbox">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </label>

    <button class="pull-right btn btn-lg btn-primary" type="submit" id="_submit" name="_submit" >Zaloguj</button>
    
    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-warning" type="submit" id="_submit" name="_submit" >Zarejestruj konto</a>
  </form>


{% endblock body %}
